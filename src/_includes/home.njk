---
layout: base.njk
---
<div class="flex-ns pt4 pt6-ns w-100 db relative">
    <div class="w-auto w-10-l dn db-l tr">
    </div>
    <div class="w-100 w-40-ns tr">
        <img class="v-top cover" src={{ eventDetails.logo }} style="margin-right: -90px">
        <h1 class="avenir mt0 tr f2 i mv1" style="margin-right: -75px">{{ eventDetails.name }}</h1>
        <div class="avenir fw4 f4 pt0 pl3 pl0-ns tr" style="margin-right: -75px">
         <p class="tr f3">{{eventDetails.endDate}}</p>
        
        </div>
    </div>
    <div class="w-auto w-50-ns tl v-top cover pr3">
        <img src="{{ eventDetails.hero }}" class="heroImage">
    </div>
    
</div>
<div class="w-100 pa3 tl f4 db mv4" style="margin-top:-240px">
    <div class="flex-ns">
        <div class="w-100 w-10-l dn db-ns">
        </div>
        <div class="w-100 w-40-ns tr">
           <a class="pv2 ph4 f4 no-underline ba br2 b--transparent mr2 contrastBkg contrastColor tr" href="{{ eventDetails.cta.path }}">{{ eventDetails.cta.name }}</a>
        </div>
    </div>
</div>
<div class="contrastBkg contrastColor pa3 tl db w-100">
    <div class="flex-ns mb2">
        <div class="w-100 w-10-l dn db-ns">
        </div>
        <div class="w-100 w-auto-ns"> 
            <p class="fw7 f2 mv2">{{ eventDetails.tagline }}</p>
        </div>
    </div>
</div>
<div class="w-100 pa3 tl f4 secondaryColor secondaryBkg">
    <div class="flex-ns mv5">
        <div class="w-100 w-10-l db-ns">
        </div>
        <div class="w-100 w-40-l">
            <h2 class="f2 mv3">{{ section[0].name }}</h2>
            <div class="f5 lh-copy">{{ section[0].text }}</div>
            <div class="mt4"><a class="pv2 ph4 f4 no-underline ba br2 b--transparent mr2 secondaryConstrastBkg secondaryContrastColor" href="{{ section[0].cta.path }}">{{ section[0].cta.name }}</a></div>
        </div>
        <div class="w-100 w-10-l db-ns">
        </div>
        <div class="dt w-30-m w-20-l"> 
            <p class="fw7 mv3">Milestones</p>
            {% for item in eventDetails.milestones %}
                <div class="dt-row">
                    <div class="dtc mt1 mb0 pv1 pr2 tl">{{ item.date }}</div> 
                    <div class="dtc tr fr pl3">{{ item.description }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<div class="w-100 pa3 tl f4 tertiaryColor tertiaryBkg">
    <div class="flex-ns mv5">
        <div class="w-100 w-50-l db-ns tc">
            <img class="pa2 center" height="300" src="{{ section[1].image }}" />
        </div>
        <div class="w-100 w-40-l tr">
            <h2 class="f2 mv3">{{ section[1].name }}</h2>
            <div class="f5 lh-copy">{% markdown section[1].text %}</div>
            <div class="mt4"><a class="pv2 ph4 f4 no-underline ba br2 b--transparent mr2 tertiaryContrastColor tertiaryContrastBkg" href="{{ section[1].cta.path }}">{{ section[1].cta.name }}</a></div>
        </div>
        <div class="w-100 w-10-l db-ns">
        </div>
    </div>
</div>
<div class="w-100 pa3 tl f4 primaryColor primaryBkg">
    <div class="flex-ns mv5">
        <div class="w-100 w-10-l dn db-ns">
        </div>
        <div class="w-100 w-40-l tl">
            <h2 class="f2 mv3">{{ section[2].name }}</h2>
            <div class="f5 lh-copy">{{ section[2].text }}</div>
            <div class="mt4"><span><a class="pv2 ph4 f4 no-underline ba br2 b--transparent mr2 contrastColor contrastBkg" href="{{ section[2].cta.path }}">{{ section[2].cta.name }}</a></span><span><a class="pv2 ph4 f4 no-underline ba br2 mr2 primaryColor primaryBorder" href="/venue">See the Venue</a></span></div>
        </div>
        <div class="w-100 w-50-l db-ns tc">
            <img class="center ba br3 b--transparent" height="320" src="{{ section[2].image }}"/>
        </div>
    </div>
</div>